generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BoardingStatus {
  PENDING_DOWNLOAD // Pendiente de descarga
  DOWNLOADING      // En descarga
  VALIDATING       // En validaci√≥n
  CAPTURING        // En captura
  COMPLETED        // Completado
}

model Box {
  id          Int      @id @default(autoincrement())
  name        String
  slug        String
  boarding    Boarding[]
}

model Boarding {
  id                Int      @id @default(autoincrement())
  numberBox         String
  dateTime          DateTime    
  operator          String
  validator         String
  capturist         String
  supplier          String
  pallets           Int
  comments          String
  perforations      Boolean    @default(false)
  documentation     Boolean    @default(false)
  security          Boolean    @default(false)
  boxId             Int
  box  Box @relation(fields: [boxId], references: [id])
  status      BoardingStatus  @default(PENDING_DOWNLOAD) // Estado inicial por defecto
}